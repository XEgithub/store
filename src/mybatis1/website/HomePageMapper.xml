<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="HomePageMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_HOMEPAGE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		THEME,	
		THEMECONTENT,	
		MODULAR1NAME,	
		MODULAR1CONTENT,	
		MODULAR2NAME,	
		MODULAR2CONTENT,	
		MODULAR3NAME,	
		MODULAR3CONTENT,	
		MODULAR4NAME,	
		MODULAR4CONTENT,	
		HOMEPAGE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{THEME},	
		#{THEMECONTENT},	
		#{MODULAR1NAME},	
		#{MODULAR1CONTENT},	
		#{MODULAR2NAME},	
		#{MODULAR2CONTENT},	
		#{MODULAR3NAME},	
		#{MODULAR3CONTENT},	
		#{MODULAR4NAME},	
		#{MODULAR4CONTENT},	
		#{HOMEPAGE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			HOMEPAGE_ID = #{HOMEPAGE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			THEME = #{THEME},
			THEMECONTENT = #{THEMECONTENT},
			MODULAR1NAME = #{MODULAR1NAME},
			MODULAR1CONTENT = #{MODULAR1CONTENT},
			MODULAR2NAME = #{MODULAR2NAME},
			MODULAR2CONTENT = #{MODULAR2CONTENT},
			MODULAR3NAME = #{MODULAR3NAME},
			MODULAR3CONTENT = #{MODULAR3CONTENT},
			MODULAR4NAME = #{MODULAR4NAME},
			MODULAR4CONTENT = #{MODULAR4CONTENT},
		HOMEPAGE_ID = HOMEPAGE_ID
		where 
		HOMEPAGE_ID = #{HOMEPAGE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			HOMEPAGE_ID = #{HOMEPAGE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			HOMEPAGE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>